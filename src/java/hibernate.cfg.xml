<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mydb?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="test/entities/Branch.hbm.xml"/>
    <mapping resource="test/entities/Note.hbm.xml"/>
    <mapping resource="test/entities/Role.hbm.xml"/>
    <mapping resource="test/entities/RegState.hbm.xml"/>
    <mapping resource="test/entities/User.hbm.xml"/>
    <mapping resource="test/entities/Registration.hbm.xml"/>
    <mapping resource="test/entities/Unit.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
